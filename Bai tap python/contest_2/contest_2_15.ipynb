    "'''\n",
    "n, a, b = map(int, input().split())\n",
    "if a*2 < b:\n",
    "    print(n*a)\n",
    "else:\n",
    "    if n%2==0:\n",
    "        print((n/2)*b)\n",
    "    else:\n",
    "        print((n-1)/2*b+a)"
